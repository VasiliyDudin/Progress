@page
@model IndexModel

      <div class="text-center">
      <div class="row d-flex justify-content-center" style="background-color: #eee;" >
                <div class="col-3 p-0">
                    <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center p-1" style="border-top: 4px solid #ffa900; height:43px;">
                             <h5 class="m-0">Чат</h5>
                             </div>
                        <div class="card-body perfect-scrollbar ps ps--active-y" id="messagesList" data-mdb-perfect-scrollbar="true" style="overflow-y: auto; position: relative; height: 400px">
                        </div>
                        <div class="card-footer text-muted d-flex justify-content-start align-items-center p-1">
                         <div class="input-group mb-0">
                            <input type="text" class="form-control" id="messageInput" disabled="disabled" placeholder="Текст сообщения" aria-label="messageInput" messageInput aria-describedby="sendButton">
                            <div class="input-group-append" id="button-addon">
                                <button class="btn btn-warning" type="button" id="sendButton">Отправить</button>
                            </div>                    
                            </div>
                        </div>
                    </div>
                </div>
            <div class="col-7 p-0">
                <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center p-1" style="border-top: 4px solid #ffa900;height:43px;">
                        <h5 class="m-0">Игра</h5>
                        <!--Toast message -->
                   
                        <div class="toast-container position-absolute p-3 top-0 start-50 translate-middle-x" id="toastPlacement" data-original-class="toast-container position-absolute p-3">
                        <div class="toast align-items-center text-white bg-danger border-0 hide" id="toast" role="alert" aria-live="assertive" aria-atomic="true">
                            <div class="d-flex">
                                <div class="toast-body" id="toasttext">
                                    
                                </div>
                                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Закрыть"></button>
                            </div>
                        </div>
                        </div>

                    </div>
                <div class="card-body d-flex justify-content-around align-items-center  m-0 p-0" style="overflow-y: auto; position: relative; height: 400px">
                    @await Html.PartialAsync("Table")
                </div>
                </div>
            </div>
            <div class="col-2 p-0">
                <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center p-1" style="border-top: 4px solid #ffa900; height:43px;">
                        <h5 class="m-0">Счёт</h5>
                    </div>
                    <div class="card-body perfect-scrollbar ps ps--active-y" id="shotsList" data-mdb-perfect-scrollbar="true" style="overflow-y: auto; position: relative; height: 400px">

                    <div class="toast-container position-absolute p-3 top-0 start-50 translate-middle-x" id="toastPlacement2" data-original-class="toast-container position-absolute p-3">
                        <div class="toast align-items-center text-white bg-success border-0 hide" id="toast2" role="alert" aria-live="assertive" aria-atomic="true">
                            <div class="d-flex">
                                <div class="toast-body" id="toasttext2">
                                </div>
                                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Закрыть"></button>
                            </div>
                        </div>
                    </div>
                    </div>
                    <div class="card-footer text-muted d-flex justify-content-start align-items-center p-1">
                    <button class="btn w-100 text-center btn-success" type="button" id="chatOnBtn" disabled="disabled">Войти в игру</button>
                    <button class="btn w-100 text-center btn-danger" type="button" hidden="hidden" disabled="disabled" id="chatOffBtn">Покинуть игру</button>
                    </div>
                </div>
            </div>
            </div>
    <!--</section>-->

</div>
